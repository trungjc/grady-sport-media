<!-- footer-5 -->
<div{% if wp_mode %} class="dm-template" dm-template="footer.footer5" component-id="{{ component_id }}"{% endif %}>
    <footer class="footer-5 bg-wet-asphalt">
        <div class="container">
            <a
            href="{{ brand.url }}"
            class="brand custom-img"
            {% if edit_mode %}
                ng-href="[[ data.brand.url ]]"
            {% endif %}>
                <img
                width="35"
                height="35"
                alt=""
                ng-class="{'removed-image': data.brand.image == '../../../img/1x1.png'}"
                src="{{ sfBuildUri }}{{ brand.image }}"
                {% if edit_mode %}
                    ng-src="{{ sfBuildUri }}[[ data.brand.image ]]"
                {% endif %} />
                {% if edit_mode %}
                <customizer class="dm-popover popover fade top dm-image">
                    <div class="dm-control-button" data-width="35" dm-upload-type="image" dm-upload-media="data.brand.image"></div>
                    <div class="dm-control-button" data-width="50" dm-remove-media="data.brand.image"></div>
                    <div class="dm-control-button" dm-edit-url="data.brand.url"></div>
                </customizer>
                {% endif %}
            </a>
            <div class="row">
                <div class="col-sm-6 col-sm-offset-3">
                    <div class="text"{% if edit_mode %}text-angular ta-toolbar="[ ['bold', 'italics', 'insertLink', 'color', 'font', 'fake'] ]" ng-model="data.description"{% endif %}>{{ description }}</div>
                </div>
            </div>
            <a
            class="btn btn-small btn-editable fui-twitter"
            href="{{ btn.url }}"
            {% if edit_mode %}
                ng-href="[[ data.btn.url ]]"
                dm-contenteditable ng-model="data.btn.name"
            {% endif %}>
                {{ btn.name }}
                {% if edit_mode %}
                <customizer class="dm-popover popover fade top">
                    <div class="dm-control-button" dm-edit-url="data.btn.url"></div>
                </customizer>
                {% endif %}
            </a>
        </div>
    </footer>
</div>