<!-- footer-13 -->
<div{% if wp_mode %} class="dm-template" dm-template="footer.footer13" component-id="{{ component_id }}"{% endif %}>
    <footer class="footer-13">
        <div class="container">
            <nav class="left-menu">
                {% macro render_one_line_menu_with_btn(items) %}
					<ul class="left-menu">
                        {% for item in items %}
                            {% if loop.index <= (loop.length // 2) %}
                                <li>
                                    <a href="{{ item.url }}">{{ item.title }}</a>
                                </li>
                            {% endif %}
                        {% endfor %}
                    </ul>
                {% endmacro %}
                {% if wp_mode %}
                    {{ _self.render_one_line_menu_with_btn(footerMenuOneLine.items) }}
                    {% if edit_mode %}
                    <customizer class="dm-popover popover fade top">
                        <div class="dm-control-button" dm-external-nav="{{ menuEditPageUriPattern|format(footerMenuOneLine.id) }}"></div>
                    </customizer>
                    {% endif %}
                {% else %}
                    {{ _self.render_one_line_menu_with_btn(menu) }}
                {% endif %}
            </nav>
            <div class="nav-icon">
                {% if edit_mode %}
                    <span ng-class="data.icon.name">
                        <customizer class="dm-popover popover fade top">
                            <div class="dm-change-icon" dm-change-icon="data.icon.name" dm-change-icon-url="data.icon.url"></div>
                        </customizer>
                    </span>
                {% else %}
                    {% if icon.url %}
                        <a href="{{ icon.url }}">
                            <span class="{{ icon.name }}"> </span>
                        </a>
                    {% else %}
                        <span class="{{ icon.name }}"> </span>
                    {% endif %}
                {% endif %}
            </div>
            <nav class="right-menu">
                {% macro render_one_line_menu_with_btn(items) %}
                    <ul>
                        {% for item in items %}
                            {% if loop.index > (loop.length // 2) %}
                                <li>
                                    <a href="{{ item.url }}">{{ item.title }}</a>
                                </li>
                            {% endif %}
                        {% endfor %}
                    </ul>
                {% endmacro %}
                {% if wp_mode %}
                    {{ _self.render_one_line_menu_with_btn(footerMenuOneLine.items) }}
                    {% if edit_mode %}
                    <customizer class="dm-popover popover fade top">
                        <div class="dm-control-button" dm-external-nav="{{ menuEditPageUriPattern|format(footerMenuOneLine.id) }}"></div>
                    </customizer>
                    {% endif %}
                {% else %}
                    {{ _self.render_one_line_menu_with_btn(menu) }}
                {% endif %}
            </nav>
        </div>
    </footer>
</div>