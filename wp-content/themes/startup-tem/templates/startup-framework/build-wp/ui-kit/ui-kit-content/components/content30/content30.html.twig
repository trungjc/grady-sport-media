<!--content-30 -->
<div{% if wp_mode %} class="dm-template" dm-template="content.content30" component-id="{{ component_id }}"{% endif %}>
	<section class="content-30">
    <div class="container">
        <div class="row features">
            {% if edit_mode %}
            <div class="col-sm-3 box-[[ $index + 1 ]]" ng-repeat="col in data.cols">
                <div class="description-top" ng-style="{'left': '0'}">
                    <h6 text-angular ta-toolbar="[ ['bold', 'italics', 'insertLink', 'color', 'font', 'fake'] ]" ng-model="col.top.title"></h6>
                    <span text-angular ta-toolbar="[ ['bold', 'italics', 'insertLink', 'color', 'font', 'fake'] ]" ng-model="col.top.description"></span>
                    <img src="{{sfBuildUri}}/common-files/img/content/arrow-tl@2x.png" width="61" height="97" alt="" ng-style="{'display': 'none'}" />
                </div>
                <div class="img">
                    <img ng-src="{{ sfBuildUri }}[[ col.image ]]" width="220" height="391" alt="">
                    <customizer class="dm-popover popover fade top dm-image">
                        <div class="dm-control-button" data-width="50" dm-upload-type="image" dm-upload-media="col.image"></div>
                        <div class="dm-control-button" data-width="50" dm-remove-media="col.image"></div>
                    </customizer>
                </div>
                <div class="description-bottom" ng-style="{'left': '0'}">
                    <h6 text-angular ta-toolbar="[ ['bold', 'italics', 'insertLink', 'color', 'font', 'fake'] ]" ng-model="col.bottom.title"></h6>
                    <span text-angular ta-toolbar="[ ['bold', 'italics', 'insertLink', 'color', 'font', 'fake'] ]" ng-model="col.bottom.description"></span>
                    <img src="{{sfBuildUri}}/common-files/img/content/arrow-br@2x.png" width="97" height="110" alt="" ng-style="{'display': 'none'}" />
                </div>
            </div>
            {% else %}
                {% for col in cols %}
                <div class="col-sm-3 box-{{ loop.index }}">
                    <div class="description-top">
                        <h6>{{ col.top.title }}</h6>
                        <span>{{ col.top.description }}</span>
                        <img src="{{sfBuildUri}}/{{ col.top.image }}" width="61" height="97" alt="" />
                    </div>
                    <div class="img">
                        <img src="{{ sfBuildUri }}{{ col.image }}" width="220" height="391" alt="">
                    </div>
                    <div class="description-bottom">
                        <h6>{{ col.bottom.title }}</h6>
                        <span>{{ col.bottom.description }}</span>
                        <img src="{{sfBuildUri}}/{{ col.bottom.image }}" width="61" height="97" alt="" />
                    </div>
                </div>
                {% endfor %}
            {% endif %}
        </div>
    </div>
</section>
</div>