<!--content-8 -->
<div{% if wp_mode %} class="dm-template" dm-template="content.content8" component-id="{{ component_id }}"{% endif %}>
    <section class="content-8">
        <div>
            <div class="container">
                <div class="img custom-img">
                    {% if edit_mode %}
                    <customizer class="dm-popover popover fade top dm-image">
                        <div class="dm-control-button" data-width="400" dm-upload-type="image" dm-upload-media="data.image"></div>
                        <div class="dm-control-button" data-width="50" dm-remove-media="data.image"></div>
                    </customizer>
                    {% endif %}
                    <img 
                    src="{{ sfBuildUri }}{{ image }}" 
                    alt=""
                    ng-class="{'removed-image': data.image == '../../../img/1x1.png'}"
                    {% if edit_mode %}
                        ng-src="{{ sfBuildUri }}[[ data.image ]]"
                    {% endif %}/>
                </div>
                <h3 {% if edit_mode %}text-angular ta-toolbar="[ ['bold', 'italics', 'insertLink', 'color', 'font', 'fake'] ]" ng-model="data.title"{% endif %}>{{ title }}</h3>
                <div class="row">
                    <div class="col-sm-6 col-sm-offset-3">
                        <p {% if edit_mode %}text-angular ta-toolbar="[ ['bold', 'italics', 'insertLink', 'color', 'font', 'fake'] ]" ng-model="data.description"{% endif %}>{{ description }}
                        </p>
                        <a 
                        {% if edit_mode %}
                            dm-contenteditable 
                            ng-model="data.btn_large.name"
                            ng-href="[[ data.btn_large.url ]]"
                        {% endif %} 
                        class="btn btn-large btn-clear" 
                        href="{{ btn_large.url }}">
                            {% if edit_mode %}
                            <customizer class="dm-popover popover fade top">
                                <div class="dm-control-button" ng-class="{hasUrl: data.btn_large.url}" dm-edit-url="data.btn_large.url"></div>
                            </customizer>
                            {% endif %}
                            {{ btn_large.name }}
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>