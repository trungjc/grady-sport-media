<!--content-3 -->
<div{% if wp_mode %} class="dm-template" dm-template="content.content3" component-id="{{ component_id }}"{% endif %}>
<section class="content-3">
    <div>
        <div class="container">
            <div class="row">
                <div class="col-sm-6 aligment">
                    <h3 {% if edit_mode %}text-angular ta-toolbar="[ ['bold', 'italics', 'insertLink', 'color', 'font', 'fake'] ]" ng-model="data.title"{% endif %}>{{ title }}</h3>
                    <p {% if edit_mode %}text-angular ta-toolbar="[ ['bold', 'italics', 'insertLink', 'color', 'font', 'fake'] ]" ng-model="data.description"{% endif %}>{{ description }}</p>
                </div>
                <div class="col-sm-6">
                    <div class="img custom-img">
                        {% if edit_mode %}
                        <customizer class="dm-popover popover fade top dm-image">
                            <div class="dm-control-button" data-width="380" dm-upload-type="image" dm-upload-media="data.image"></div>
                            <div class="dm-control-button" data-width="50" dm-remove-media="data.image"></div>
                        </customizer>
                        {% endif %}
                        <img
                        src="{{ sfBuildUri }}{{ image }}"
                        ng-class="{'removed-image': data.image == '../../../img/1x1.png'}"
                        {% if edit_mode %}
                            ng-src="{{ sfBuildUri }}[[ data.image ]]"
                        {% endif %} />
                    </div>
                </div>
            </div>
        </div>
        <div class="delimiter">&nbsp;</div>
        <div class="container">
            <div class="row features">
                {% if edit_mode %}
                <div class="col-sm-3" ng-repeat="box in data.boxes" ng-class="{'col-sm-offset-1': $index > '0'}">
                    <h6 text-angular ta-toolbar="[ ['bold', 'italics', 'insertLink', 'color', 'font', 'fake'] ]" ng-model="box.title"></h6>
                    <p text-angular ta-toolbar="[ ['bold', 'italics', 'insertLink', 'color', 'font', 'fake'] ]" ng-model="box.description"></p>
                </div>
                {% else %}
                    {% for box in boxes %}
                        <div class="col-sm-3 {% if loop.index > 1 %}col-sm-offset-1{% endif %}">
                            <h6>{{ box.title }}</h6>
                            <p>{{ box.description }}</p>
                        </div>
                    {% endfor %}
                {% endif %}
           </div>
        </div>
    </div>
</section>
</div>