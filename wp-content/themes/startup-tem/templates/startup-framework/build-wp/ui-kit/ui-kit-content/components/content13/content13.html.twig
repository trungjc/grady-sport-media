<!--content-13 -->
<div{% if wp_mode %} class="dm-template" dm-template="content.content13" component-id="{{ component_id }}"{% endif %}>
    <section class="content-13 subscribe-form bg-turquoise">
        <div class="container">
            <div class="row">
                <form method="post">
                    <div class="col-sm-8">
                        <input type="hidden" name="sf_register_user[subscribe]" value="true">
                        <input type="text"  placeholder="Enter your e-mail"  name="sf_register_user[email]" spellcheck="false">
                    </div>
                    <div class="col-sm-4">
                        {% if edit_mode %}
                        <span class="dm-form-button btn btn-large btn-primary" dm-contenteditable ng-model="data.btn_primary.name"></span>
                        {% else %}
                        <button class="btn btn-large btn-primary" type="submit">{{ btn_primary.name }}</button>
                        {% endif %}
                    </div>
                </form>
            </div>
        </div>
    </section>
</div>