<!--content-4 -->
<div{% if wp_mode %} class="dm-template" dm-template="content.content4" component-id="{{ component_id }}"{% endif %}>
  <section class="content-4">
    <div class="container">
        <h3 {% if edit_mode %}text-angular ta-toolbar="[ ['bold', 'italics', 'insertLink', 'color', 'font', 'fake'] ]" ng-model="data.title"{% endif %}>{{ title }}</h3>
        <div class="row features">
            {% if edit_mode %}
            <div class="col-sm-4" ng-repeat="row in data.rows">
                <div class="img-holder custom-img">
                    {% if edit_mode %}
                    <customizer class="dm-popover popover fade top dm-image">
                        <div class="dm-control-button" data-width="117" dm-upload-type="image" dm-upload-media="row.image"></div>
                        <div class="dm-control-button" data-width="50" dm-remove-media="row.image"></div>
                    </customizer>
                    {% endif %}
                    <img 
                    alt="" 
                    width="117" 
                    height="104"
                    ng-class="{'removed-image': row.image == '../../../img/1x1.png'}"
                    ng-src="{{ sfBuildUri }}[[ row.image ]]"/>
                </div>
                <h6 text-angular ta-toolbar="[ ['bold', 'italics', 'insertLink', 'color', 'font', 'fake'] ]" ng-model="row.title"></h6>
                <p text-angular ta-toolbar="[ ['bold', 'italics', 'insertLink', 'color', 'font', 'fake'] ]" ng-model="row.name"></p>
            </div>
            {% else %}
                {% for row in rows %}
                    <div class="col-sm-4">
                        <div class="img-holder">
                            <img
                            width="117"
                            height="104"
                            alt=""
                            src="{{ sfBuildUri }}{{ row.image }}" />
                        </div>
                        <h6>{{ row.title }}</h6>
                        <p>{{ row.name }}</p>
                    </div>
                {% endfor %}
            {% endif %}
        </div>
    </div>
</section>
</div>