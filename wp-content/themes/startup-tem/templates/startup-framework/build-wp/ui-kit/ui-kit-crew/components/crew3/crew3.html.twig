<!--crew-3 -->
<div{% if wp_mode %} class="dm-template" dm-template="crew.crew3" component-id="{{ component_id }}"{% endif %}>
    <section class="crew-3">
        <div class="container">
            <h3 {% if edit_mode %}text-angular ta-toolbar="[ ['bold', 'italics', 'insertLink', 'color', 'font', 'fake'] ]" ng-model="data.title"{% endif %}>{{ title }} </h3>
            <div class="title">
                {% if edit_mode %}
                <a
                dm-contenteditable
                ng-model="title.name"
                ng-repeat="title in data.titles"
                href="#"></a>
                {% else %}
                    {% for title in titles %}
                        <a href="#">{{ title.name }}</a>
                    {% endfor %}
                {% endif %}
                <span class="social-btns">
                    {% if edit_mode %}
                    <customizer class="dm-popover popover fade top">
                        <div class="dm-social-btns" dm-social-btns="data.social_btns"></div>
                    </customizer>
                    <span
                    class="social-item"
                    ng-repeat="social_btn in data.social_btns">
                        <a
                        class="social-holder"
                        ng-href="[[ social_btn.url ]]">
                            <div class="[[ social_btn.name ]]"></div>
                            <div class="[[ social_btn.name ]]"></div>
                        </a>
                    </span>
                    {% else %}
                        {% for social_btn in social_btns %}
                            <a href="{{ social_btn.url }}">
                                <div class="{{ social_btn.name }}"></div>
                                <div class="{{ social_btn.name }}"></div>
                            </a>
                        {% endfor %}
                    {% endif %}
                </span>
            </div>
            {% if edit_mode %}
            <div class="members" ng-repeat="membersRow in data.membersRows">
                <div class="member-wrapper" ng-repeat="member in membersRow.members">
                    <div class="member">
                        <div class="photo-wrapper">
                            <div class="photo custom-img" ng-style="{ 'background-image': 'url({{ sfBuildUri }}' + member.image + ')'}">
                                <img
                                ng-class="{'removed-image': member.image == '../../../img/1x1.png'}"
                                ng-src="{{ sfBuildUri }}[[ member.image ]]"
                                alt="" />
                            </div>
                            <div class="overlay"><span class="fui-eye"></span></div>
                            <div dm-contenteditable ng-model="member.name" class="name"></div>
                            <customizer class="dm-popover popover fade top dm-image">
                                <div class="dm-control-button" data-width="270" dm-upload-type="image" dm-upload-media="member.image"></div>
                                <div class="dm-control-button" data-width="50" dm-remove-media="member.image"></div>
                            </customizer>
                        </div>
                    </div>
                </div>
            </div>
            {% else %}
                {% for membersRow in membersRows %}
                    <div class="members">
                        {% for member in membersRow.members %}
                        <div class="member-wrapper">
                            <div class="member">
                                <div class="photo-wrapper">
                                    <div class="photo" style="background-image: url({{ sfBuildUri }}{{ member.image}})"></div>
                                    <div class="overlay"><span class="fui-eye"></span></div>
                                    <div class="name">{{ member.name }}</div>
                                </div>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                {% endfor %}
            {% endif %}
        </div>
    </section>
</div>