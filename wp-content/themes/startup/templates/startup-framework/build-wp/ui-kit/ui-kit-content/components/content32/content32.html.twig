<!--content-32 -->
<div{% if wp_mode %} class="dm-template" dm-template="content.content32" component-id="{{ component_id }}"{% endif %}>
	<section class="content-32">
    <div class="container">
        <div class="row">
            <div class="col-sm-8 col-sm-offset-2">
                <h3 {% if edit_mode %}text-angular ta-toolbar="[ ['bold', 'italics', 'insertLink', 'color', 'font', 'fake'] ]" ng-model="data.title"{% endif %}>{{ title }}</h3>
                <p {% if edit_mode %}text-angular ta-toolbar="[ ['bold', 'italics', 'insertLink', 'color', 'font', 'fake'] ]" ng-model="data.description"{% endif %} class="lead">{{ description }}</p>
            </div>
        </div>
    </div>
    <div class="features">
        <div class="container">
            <div class="row">
                {% if edit_mode %}
                    <div class="col-sm-3" ng-repeat="box in data.boxes" ng-class="{'col-sm-offset-1': $index > '0'}">
                        <h6 text-angular ta-toolbar="[ ['bold', 'italics', 'insertLink', 'color', 'font', 'fake'] ]" ng-model="box.title"></h6>
                        <p text-angular ta-toolbar="[ ['bold', 'italics', 'insertLink', 'color', 'font', 'fake'] ]" ng-model="box.description"></p>
                    </div>
                {% else %}
                    {% for box in boxes %}
                        <div class="col-sm-3 {% if loop.index > 1 %}col-sm-offset-1{% endif %}">
                            <h6>{{ box.title }}</h6>
                            <p>{{ box.description }}</p>
                        </div>
                    {% endfor %}
                {% endif %}
            </div>
        </div>
    </div>
</section>
</div>