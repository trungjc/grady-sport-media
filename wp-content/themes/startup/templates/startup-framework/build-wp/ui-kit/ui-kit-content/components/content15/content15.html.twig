<!--content-15 -->
<div{% if wp_mode %} class="dm-template" dm-template="content.content15" component-id="{{ component_id }}"{% endif %}>
    <section class="content-15 v-center">
        <div>
            <div class="container">
                <div class="row">
                    <h3 {% if edit_mode %}text-angular ta-toolbar="[ ['bold', 'italics', 'insertLink', 'color', 'font', 'fake'] ]" ng-model="data.title"{% endif %} class="col-sm-10 col-sm-offset-1">{{ title }}
                    </h3>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <p {% if edit_mode %}text-angular ta-toolbar="[ ['bold', 'italics', 'insertLink', 'color', 'font', 'fake'] ]" ng-model="data.col_left.description"{% endif %}>{{ col_left.description }}
                        </p>
                    </div>
                    <div class="col-sm-6">
                        <p {% if edit_mode %}text-angular ta-toolbar="[ ['bold', 'italics', 'insertLink', 'color', 'font', 'fake'] ]" ng-model="data.col_right.description"{% endif %}>
                          {{ col_right.description }}  
                        </p>
                    </div>
                </div>
                <div class="row features">
                    <div class="col-sm-7 custom-img">
                        <img 
                        src="{{ sfBuildUri }}{{ image }}" 
                        width="540" 
                        height="441" 
                        alt="" 
                        ng-class="{'removed-image': data.image == '../../../img/1x1.png'}"
                        {% if edit_mode %}
                            ng-src="{{ sfBuildUri }}[[ data.image ]]"
                        {% endif %}/>
                        {% if edit_mode %}
                        <customizer class="dm-popover popover fade top dm-image">
                            <div class="dm-control-button" data-width="540" dm-upload-type="image" dm-upload-media="data.image"></div>
                            <div class="dm-control-button" data-width="50" dm-remove-media="data.image"></div>
                        </customizer>
                        {% endif %}
                    </div>
                    <div class="col-sm-4 col-sm-offset-1">
                        {% if edit_mode %}
                        <div class="text" ng-repeat="row in data.rows">
                            <h6 text-angular ta-toolbar="[ ['bold', 'italics', 'insertLink', 'color', 'font', 'fake'] ]" ng-model="row.title"></h6>
                            <p text-angular ta-toolbar="[ ['bold', 'italics', 'insertLink', 'color', 'font', 'fake'] ]" ng-model="row.description"></p>
                        </div>
                        {% else %}
                            {% for row in rows %}
                            <div class="text">
                                <h6>{{ row.title }}</h6>
                                <p>{{ row.description }}</p>
                            </div>
                            {% endfor %}
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>