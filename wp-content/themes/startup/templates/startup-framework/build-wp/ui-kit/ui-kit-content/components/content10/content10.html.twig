<!--content-10 -->
<div{% if wp_mode %} class="dm-template" dm-template="content.content10" component-id="{{ component_id }}"{% endif %}>
<section class="content-10">
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <h3 {% if edit_mode %}text-angular ta-toolbar="[ ['bold', 'italics', 'insertLink', 'color', 'font', 'fake'] ]" ng-model="data.title"{% endif %}>{{ title }}</h3>
                <p {% if edit_mode %}text-angular ta-toolbar="[ ['bold', 'italics', 'insertLink', 'color', 'font', 'fake'] ]" ng-model="data.description"{% endif %}>{{ description }}</p>
                <div class="features">
                    {% if edit_mode %}
                    <div class="box" ng-repeat="textBox in data.textBoxes">
                        <div class="img-holder custom-img">
                            <img
                            width="100"
                            height="100"
                            alt=""
                            ng-class="{'removed-image': textBox.image == '../../../img/1x1.png'}"
                            ng-src="{{ sfBuildUri }}[[ textBox.image ]]" />
                            <customizer class="dm-popover popover fade top dm-image">
                                <div class="dm-control-button" data-width="100" dm-upload-type="image" dm-upload-media="textBox.image"></div>
                                <div class="dm-control-button" data-width="50" dm-remove-media="textBox.image"></div>
                            </customizer>
                        </div>
                        <h6 text-angular ta-toolbar="[ ['bold', 'italics', 'insertLink', 'color', 'font', 'fake'] ]" ng-model="textBox.title"></h6>
                        <p text-angular ta-toolbar="[ ['bold', 'italics', 'insertLink', 'color', 'font', 'fake'] ]" ng-model="textBox.text"></p>
                    </div>
                    {% else %}
                        {% for textBox in textBoxes %}
                        <div class="box">
                            <div class="img-holder">
                                <img
                                width="100"
                                height="100"
                                alt=""
                                src="{{ sfBuildUri }}{{ textBox.image }}" />
                            </div>
                            <h6>{{ textBox.title }}</h6>
                            <p>{{ textBox.text }}</p>
                        </div>
                        {% endfor %}
                    {% endif %}
                </div>
            </div>
            <div class="col-sm-4 col-sm-offset-2 text-center">
                {% if edit_mode %}
                <div
                dm-slider="c-10_myCarousel-{{ component_id }}"
                dm-slider-model="data.slider"
                dm-slider-archive="c10_myCarousel"
                class="carousel slide">
                    <div class="carousel-inner">
                        <div
                        class="item custom-img"
                        ng-repeat="slide in data.slider"
                        dm-slider-repeat>
                            <img
                            width="302"
                            height="635"
                            alt=""
                            ng-class="{'removed-image': slide.image == '../../../img/1x1.png'}"
                            ng-src="{{ sfBuildUri }}[[ slide.image ]]" />
                            <customizer class="dm-popover popover fade top dm-image">
                                <div class="dm-control-button" data-width="302" dm-upload-type="image" dm-upload-media="slide.image"></div>
                                <div class="dm-control-button" data-width="50" dm-remove-media="slide.image"></div>
                            </customizer>
                        </div>
                    </div>
                    <ol class="carousel-indicators">
                        <li data-target="#c-10_myCarousel-{{ component_id }}" ng-repeat="slide in data.slider" data-slide-to="[[$index]]"></li>
                    </ol>
                </div>
                {% else %}
                <div id="c-10_myCarousel-{{ component_id }}" class="carousel slide">
                    <div class="carousel-inner">
                        {% for slide in slider %}
                        <div class="item">
                            <img
                            width="302"
                            height="635"
                            alt=""
                            src="{{ sfBuildUri }}{{ slide.image }}" />
                        </div>
                        {% endfor %}
                    </div>
                    <ol class="carousel-indicators">
                        {% for slide in slider %}
                        <li data-target="#c-10_myCarousel-{{ component_id }}" data-slide-to="{{ loop.index - 1 }}"></li>
                        {% endfor %}
                    </ol>
                </div>
                {% endif %}
            </div>
        </div>
    </div>
</section>
</div>