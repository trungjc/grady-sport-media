<!-- footer-4 -->
<div{% if wp_mode %} class="dm-template" dm-template="footer.footer4" component-id="{{ component_id }}"{% endif %}>
    <footer class="footer-4 bg-midnight-blue">
        <div class="container">
            <a
            href="{{ brand.url }}"
            class="brand"
            {% if edit_mode %}
            	dm-contenteditable
            	ng-model="data.brand.name"
            	ng-href="[[ data.brand.url ]]"
            {% endif %}>
            	{{ brand.name }}
            	{% if edit_mode %}
                <customizer class="dm-popover popover fade top">
                    <div class="dm-control-button" dm-edit-url="data.brand.url"></div>
                </customizer>
                {% endif %}
        	</a>
        </div>
    </footer>
</div>