<!-- header-11 -->
<div{% if wp_mode %} class="dm-template" dm-template="header.header11" component-id="{{ component_id }}"{% endif %}>
      <header class="header-11">
        <div class="container">
            <div class="row">
                <div class="navbar col-sm-12" role="navigation">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle"></button>
                        <a
                        href="{{ brand.url }}"
                        class="brand custom-img"
                        {% if edit_mode %}
                            ng-href="[[ data.brand.url ]]"
                        {% endif %}>
                            {% if edit_mode %}
                            <customizer class="dm-popover popover fade top dm-image">
                                <div class="dm-control-button" data-width="50" dm-upload-type="image" dm-upload-media="data.brand.image"></div>
                                <div class="dm-control-button" data-width="50" dm-remove-media="data.brand.image"></div>
                                <div class="dm-control-button" ng-class="{hasUrl: data.brand.url}" dm-edit-url="data.brand.url"></div>
                            </customizer>
                            {% endif %}
                            <img
                            width="50"
                            height="50"
                            alt=""
                            ng-class="{'removed-image': data.brand.image == '../../../img/1x1.png'}"
                            src="{{ sfBuildUri }}{{ brand.image }}"
                            {% if edit_mode %}
                                ng-src="{{ sfBuildUri }}[[ data.brand.image ]]"
                            {% endif %} />
                            <span {% if edit_mode %}dm-contenteditable ng-model="data.brand.name"{% endif %}>{{ brand.name }}</span>
                        </a>
                    </div>
                    <div class="collapse navbar-collapse pull-right">
                        <div class="pull-left">
                            {% macro render_one_line_menu(items) %}
            					<ul class="nav">
                                    {% for item in items %}
                                        <li>
                                            <a href="{{ item.url }}">{{ item.title }}</a>
                                        </li>
                                    {% endfor %}
                                </ul>
                            {% endmacro %}
                            {% if wp_mode %}
                                {{ _self.render_one_line_menu(headerMenu.items) }}
                                {% if edit_mode %}
                                <customizer class="dm-popover popover fade top">
                                    <div class="dm-control-button" dm-external-nav="{{ menuEditPageUriPattern|format(headerMenu.id) }}"></div>
                                </customizer>
                                {% endif %}
                            {% else %}
                                {{ _self.render_one_line_menu(menu) }}
                            {% endif %}
                        </div>
                        <form class="navbar-form pull-left">
                            <a
                            {% if edit_mode %}
                                dm-contenteditable
                                ng-model="data.btn_primary.name"
                            {% endif %}
                            class="btn btn-info"
                            href="{{ btn_primary.url }}">
                                {{ btn_primary.name }}
                                {% if edit_mode %}
                                <customizer class="dm-popover popover fade top">
                                    <div class="dm-control-button" ng-class="{hasUrl: data.btn_primary.url}" dm-edit-url="data.btn_primary.url"></div>
                                </customizer>
                                {% endif %}
                            </a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="header-background"></div>
    </header>
    <section
    class="header-11-sub dm-controlsView-holder"
    {% if edit_mode %}
        ng-style="{'background-color': data.bg_color}"
    {% else %}
        style="background-color: {{ bg_color }}"
    {% endif %}>
        {% if edit_mode %}
        <div class="dm-controls dm-controlsView-btns dm-bg-image" ng-class="{'hide-opacity-widget': !data.bg_image || data.bg_image == '../../../img/1x1.png'}">
            <div class="btn-group">
                <div class="dm-control-button" dm-remove-media="data.bg_image"></div>
                <div class="dm-control-button" dm-upload-media="data.bg_image"></div>
                <div class="dm-control-button" dm-opacity="data.opacity" dm-gradient="data.bg_color"></div>
                <div class="dm-control-button" dm-bg-color="data.bg_color"></div>
            </div>
        </div>
        {% endif %}
        <div class="background"
        {% if edit_mode %}
            ng-style="{
                'background-image': 'url({{ sfBuildUri }}' + data.bg_image + ')',
                'opacity': data.opacity
            }"
        {% else %}
            style="background-image: url({{ sfBuildUri }}{{ bg_image }}); opacity: {{ opacity }}"
        {% endif %}>&nbsp;</div>
        <div class="container">
            <div class="row">
                <div class="col-sm-4">
                    <h3 {% if edit_mode %}text-angular ta-toolbar="[ ['bold', 'italics', 'insertLink', 'color', 'font', 'fake'] ]" ng-model="data.title"{% endif %}>{{ title }}</h3>
                    <p {% if edit_mode %}text-angular ta-toolbar="[ ['bold', 'italics', 'insertLink', 'color', 'font', 'fake'] ]" ng-model="data.description"{% endif %}>{{ description }}</p>
                    <div class="signup-side-form-holder">
                        <div class="signup-form">
                            <form method="post">
                              {% if register_form_errors %}
                                    <div class="errors">
                                        {% for error in register_form_errors %}
                                            <div class="error">{{ error }}</div>
                                        {% endfor %}
                                    </div>
                                {% endif %}
                                {% if register_form_success %}Success{% endif %}
                                <div class="form-group">
                                    <input class="form-control" type="text" name="sf_register_user[email]" placeholder="Your E-mail">
                                </div>
                                <div class="form-group">
                                    <div>
                                        <input type="password" class="form-control" name="sf_register_user[pwd]" placeholder="Password">
                                    </div>
                                    <div>
                                        <input type="password" class="form-control" name="sf_register_user[rpwd]" placeholder="Confirmation">
                                    </div>
                                </div>
                                <div class="form-group">
                                    {% if edit_mode %}
                                    <span class="dm-form-button btn btn-block btn-info" dm-contenteditable ng-model="data.btn_info.name"></span>
                                    {% else %}
                                    <button type="submit" class="btn btn-block btn-info">{{ btn_info.name }}</button>
                                    {% endif %}
                                </div>
                             </form>
                        </div>
                        <div class="additional-links" {% if edit_mode %}text-angular ta-toolbar="[ ['bold', 'italics', 'insertLink', 'color', 'font', 'fake'] ]" ng-model="data.add_links"{% endif %}>{{ add_links }}</div>
                    </div>
                </div>
                <div class="col-sm-7 col-sm-offset-1 player-wrapper">
                    <div class="player">
                        {% if edit_mode %}
                            <customizer class="dm-popover popover fade top">
                                <div class="dm-control-button" ng-class="{hasUrl: data.player.src}" dm-edit-url="data.player.src" dm-edit-url-type="video"></div>
                            </customizer>
                            <div
                                dm-video="data.player.src"
                                class="embed-video"
                                id="pPlayer{{ component_id }}">
                            </div>
                        {% else %}
                            <div class="embed-video">
                                <iframe id="pPlayer{{ component_id }}" data-src="{{ player.src }}" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
                            </div>
                        {% endif %}
                    </div>
                    <div class="signup-form-holder">
                        <div class="signup-form">
                            <form method="post">
                              {% if register_form_errors %}
                                    <div class="errors">
                                        {% for error in register_form_errors %}
                                            <div class="error">{{ error }}</div>
                                        {% endfor %}
                                    </div>
                                {% endif %}
                                {% if register_form_success %}Success{% endif %}
                                <div class="form-group">
                                    <input class="form-control" type="text" name="sf_register_user[email]" placeholder="Your E-mail">
                                </div>
                                <div class="form-group">
                                    <div>
                                        <input type="password" class="form-control" name="sf_register_user[pwd]" placeholder="Password">
                                    </div>
                                    <div>
                                        <input type="password" class="form-control" name="sf_register_user[rpwd]" placeholder="Confirmation">
                                    </div>
                                </div>
                                <div class="form-group">
                                    {% if edit_mode %}
                                    <span class="dm-form-button btn btn-block btn-info" dm-contenteditable ng-model="data.btn_info.name"></span>
                                    {% else %}
                                    <button type="submit" class="btn btn-block btn-info">{{ btn_info.name }}</button>
                                    {% endif %}
                                </div>
                             </form>
                        </div>
                        <div class="additional-links" {% if edit_mode %}text-angular ta-toolbar="[ ['bold', 'italics', 'insertLink', 'color', 'font', 'fake'] ]" ng-model="data.add_links"{% endif %}>{{ add_links }}</div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>